<div class="vocab_sheet_item__column vocab_sheet_item__column--<%=size%>">
  <li class="vocab_sheet_item vocab_sheet_page_item shadow rounded">
    <%= hidden_field_tag "item[#{vocab_sheet_item.id}][id]", vocab_sheet_item.id, class: 'item_id' %>
    <%= link_to sign_url(vocab_sheet_item.sign_id), { class: "drawing vocab_sheet_drawing drawing vocab_sheet_drawing__size--#{size}" } do %>
      <%= image_tag "signs/#{vocab_sheet_image_width}-#{vocab_sheet_image_height}/#{vocab_sheet_item.drawing}" %>
    <% end %>
    <%= form_tag vocab_sheet_item_path(vocab_sheet_item), method: :put do %>
      <%= text_area_tag "item[name]", vocab_sheet_item.name, class: 'item_name vocab-sheet__text-input h3', id: "item_#{vocab_sheet_item.id}_name" %>
      <%= hidden_field_tag "item[#{vocab_sheet_item.id}][old_name]", vocab_sheet_item.name, class: 'old_name' %>
      <%= text_area_tag "item[maori_name]", vocab_sheet_item.maori_name, class: 'item_maori_name vocab-sheet__text-input h3 maori_gloss', id: "item_#{vocab_sheet_item.id}_maori_name" %>
      <%= hidden_field_tag "item[#{vocab_sheet_item.id}][old_maori_name]", vocab_sheet_item.maori_name, class: 'old_maori_name' %>
      <%= submit_button('vocab_sheet.change') %>
    <% end %>
    <%= form_tag vocab_sheet_item_path(vocab_sheet_item), method: :delete do %>
      <button class="remove" type= 'submit'> <%=t('vocab_sheet.item.remove')%> </button>
    <% end %>
  </li>
</div>
